<html>
  <head>
    <meta charset="utf-8">
    <link href='css/bootstrap.min.css' rel='stylesheet' type='text/css'>
    <link href='css/bootstrap-theme.min.css' rel='stylesheet' type='text/css'>
    <link href='css/styles.css' rel='stylesheet' type='text/css'>
    <script src='js/jquery-3.1.0.js'></script>
    <script src='js/bootstrap.min.js' type='text/javascript'></script>
    <script src='js/scripts.js'></script>
    <title>Restaurant Rater</title>
  </head>
  <body>
     <div class="container">
       <h1>Resaurant Rater</h1>
        <div class="row">
          <div class="col-md-4 col-md-offset-1">
            <h3>Add a restaurant</h3>
            <form action="/restaurants" method="post">
                <label for="">Name</label>
                <input type="text" name="restaurant_name" value="">
                <label for="">Cuisine</label>
                <input type="text" name="restaurant_cuisine" value="">
                <label for="">Description</label>
                <input type="text" name="restaurant_description" value="">
                <br>
                <button type="submit" class="btn btn-success" name="button">submit</button>
            </form>
            <a href=/restaurants><button type="button" class="btn btn-primary" name="button">View your list</button></a>
            <form action="/clear" method="post">
                <button type="submit" class="btn btn-danger" name="button">Clear your list</button>
            </form>
          </div>
          <div class="col-md-4 col-md-offset-2">
            {% if restaurants is not empty %}
              <h3>Your Restaurants</h3>
                <ul>
              {% for restaurant in restaurants %}
                  <li><a href='/restaurant/{{ restaurant.getId }}'>{{ restaurant.getName }}</a></li>
              {% endfor %}
                </ul>
            {% endif %}
          </div>
        </div>
    </div>
  </body>
</html>
